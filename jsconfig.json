{
  "compilerOptions": {
    "noLib": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules/",
    "dist/"
  ],
  "include": [
    "src/**/*"
  ]
}
